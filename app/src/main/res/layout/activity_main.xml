<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="8dp"
  tools:context=".MainActivity">

  <TextView
    android:id="@+id/current_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/ImageNameStyle"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>

  <TextView
    android:id="@+id/transform_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/TransformNameStyle"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"/>

  <ToggleButton
    android:id="@+id/image_toggle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textOn="Image!"
    android:textOff="Image"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/transform_toggle"/>

  <ToggleButton
    android:id="@+id/transform_toggle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textOn="Transform!"
    android:textOff="Transform"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toRightOf="@id/image_toggle"/>

</android.support.constraint.ConstraintLayout>