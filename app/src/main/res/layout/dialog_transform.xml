<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto">

 <Button
   android:id="@+id/transform_1"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:text="@string/transform_type_1"
   app:layout_constraintTop_toTopOf="parent"
   app:layout_constraintLeft_toLeftOf="parent"
   app:layout_constraintBottom_toTopOf="@+id/transform_2"/>

  <Button
    android:id="@+id/transform_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/transform_type_2"
    />

  <Button
    android:id="@+id/transform_3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/transform_type_3"/>

</android.support.constraint.ConstraintLayout>