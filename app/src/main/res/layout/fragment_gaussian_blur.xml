<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context=".controller.TransformPickerDialogFragment"
  android:theme="@style/GaussianBlur"
  style="@style/GaussianBlur">

  <EditText
    android:id="@+id/gaussian_x"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/gaussian_x"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/gaussian_y"/>

  <EditText
    android:id="@+id/gaussian_y"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/gaussian_y"
    app:layout_constraintTop_toBottomOf="@id/gaussian_x"
    app:layout_constraintBottom_toTopOf="@id/gaussian_standard_deviation"/>

  <EditText
    android:id="@+id/gaussian_standard_deviation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/gaussian_standard_deviation"
    app:layout_constraintTop_toBottomOf="@id/gaussian_y"
    app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>